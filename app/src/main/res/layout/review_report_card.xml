<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_report_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/border_background"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_report_reported_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:text="@string/reservation_accommodation_name"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/review_report_rating"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/accommodation_rating"
                    android:textAlignment="gravity"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/review_report_rating_star"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accommodation_image"
                    app:srcCompat="@drawable/ic_rating_star" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_report_reported_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/reported_by"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/review_report_reportee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/emailExample"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/review_report_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/message_hint"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_report_reviewed_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/reviewed_by"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/review_report_reviewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/emailExample"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/review_report_created_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/date_example"
            android:textSize="14sp"
            android:textStyle="normal" />




    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/review_report_delete_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/delete_button"
            android:layout_weight="2.5"
            android:theme="@style/Button.RedCurved"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

</LinearLayout>