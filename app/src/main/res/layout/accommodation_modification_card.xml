<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accommodation_modification_card"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_marginVertical="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border_background"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:background="@drawable/border_background"
            android:id="@+id/accommodation_modification_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:contentDescription="@string/accommodation_image"
            app:srcCompat="@drawable/accommodation_image_example" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accommodation_modification_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/accommodation_title"
                    android:textAlignment="gravity"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/accommodation_modification_rating"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="right|center_vertical"
                        android:text="@string/accommodation_rating"
                        android:textAlignment="gravity"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/accommodation_modification_rating_star"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accommodation_image"
                        app:srcCompat="@drawable/ic_rating_star" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/accommodation_modification_location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="@string/accommodation_location"
                android:textSize="14sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accommodation_modification_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:text="@string/status"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/accommodation_modification_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Pending"
                    android:textColor="#F7A12E"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accommodation_modification_request_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:text="@string/requestType"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/accommodation_modification_request_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="New"
                    android:textColor="#F7A12E"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/accommodation_modification_approve_button"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:text="@string/Approve"
            android:theme="@style/Button.GreenCurved"
            android:layout_marginRight="5dp"
            android:enabled="false"
            />

        <Button
            android:id="@+id/accommodation_modification_deny_button"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:text="@string/Deny"
            android:theme="@style/Button.RedCurved"
            android:enabled="false"
            />


    </LinearLayout>
</LinearLayout>
