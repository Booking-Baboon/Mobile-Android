<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Accommodation Name -->
    <TextView
        android:id="@+id/periodSummaryItemAccommodationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Accommodation name"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <!-- Number of Reservations -->
    <TextView
        android:id="@+id/periodSummaryItemNumberOfReservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservations: 5"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <!-- Total Profit -->
    <TextView
        android:id="@+id/periodSummaryItemTotalProfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total profit: 2500"
        android:textSize="16sp"/>
</LinearLayout>