<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@+id/nav_main"
    >
    <fragment
        android:id="@+id/nav_notifications"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.NotificationsScreen"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications_screen"
        app:popUpTo="@+id/nav_main"
        app:popUpToInclusive="true"
        />


    <fragment
        android:id="@+id/nav_reservations"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.GuestReservationsScreen"
        android:label="Reservations"
        tools:layout="@layout/fragment_guest_reservations_screen"
        app:popUpTo="@+id/nav_main"
        app:popUpToInclusive="true"
        />

    <fragment
        android:id="@+id/nav_accommodation_details"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.AccommodationDetailsScreen"
        android:label="AccommodationDetails"
        tools:layout="@layout/fragment_accommodation_details_screen"
        app:popUpTo="@+id/nav_main"
        app:popUpToInclusive="true"
        />

    <fragment
        android:id="@+id/nav_reservation_request"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.ReservationRequestScreen"
        android:label="AccommodationDetails"
        tools:layout="@layout/fragment_reservation_request_screen"
        app:popUpTo="@+id/nav_main"
        app:popUpToInclusive="true"
        />

    <fragment
        android:id="@+id/nav_main"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.FragmentGuestMainScreen"
        android:label="Main"
        tools:layout="@layout/fragment_guest_main_screen"
        />

    <fragment
        android:id="@+id/nav_account"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.AccountScreen"
        android:label="Account"
        tools:layout="@layout/fragment_account_screen"
        app:popUpTo="@+id/nav_main"
        app:popUpToInclusive="true"
        />

    <fragment
        android:id="@+id/nav_review_host"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.HostReviewFragment"
        android:label="ReviewHost"
        tools:layout="@layout/fragment_host_review"
        app:popUpTo="@+id/nav_reservations"
        />

    <fragment
        android:id="@+id/nav_review_accommodation"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.AccommodationReviewFragment"
        android:label="ReviewAccommodation"
        tools:layout="@layout/fragment_accommodation_review"
        app:popUpTo="@+id/nav_reservations"
        />

    <fragment
        android:id="@+id/nav_report_host"
        android:name="com.example.bookingapptim4.ui.elements.Fragments.HostReportFragment"
        android:label="ReportHost"
        tools:layout="@layout/fragment_host_report"
        app:popUpTo="@+id/nav_reservations"
        />

</navigation>